{
    "id": "org.kde.okteta",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "okteta",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=cups",
        "--socket=wayland",
        "--socket=x11"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig"
    ],
    "modules": [
        {
            "name": "okteta",
            "buildsystem": "cmake",
            "sources": [
                { "type": "git", "url": "https://anongit.kde.org/okteta.git" }
            ]
        }
    ]
}
