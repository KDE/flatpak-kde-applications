{
    "id": "org.kde.mobile.angelfish",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "angelfish",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--socket=pulseaudio"
    ],
    "modules": [
        {
            "name": "purpose",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "git://anongit.kde.org/purpose.git",
                    "tag": "v5.60.0"
                }
            ]
        },
        {
            "name": "icon",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/icons/hicolor/32x32/apps/",
                "install -D /usr/share/icons/breeze/apps/48/internet-web-browser.svg /app/share/icons/hicolor/32x32/apps/"
            ]
        },
        {
            "name": "angelfish",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/plasma-angelfish.git", "branch": "master" } ]
        }
    ]
}
