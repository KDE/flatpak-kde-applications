{
    "id": "org.kde.kamoso",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "kamoso",
    "tags": ["nightly"],
    "desktop-file-name-prefix": "(Nightly) ",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host",
        "--filesystem=xdg-config/kdeglobals:ro",
        "--share=network",
        "--env=GST_PLUGIN_SYSTEM_PATH=/app/lib/gstreamer-1.0/:/usr/lib/gstreamer-1.0/",
        "--device=all",
        "--talk-name=com.canonical.AppMenu.Registrar"
    ],

    "modules": [
        {
            "name": "purpose",
            "config-opts": ["-DENABLE_TESTING=OFF"],
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/purpose.git", "branch": "v5.49.0" } ]
        },
        {
            "name": "kamoso",
            "config-opts": ["-DENABLE_TESTING=OFF"],
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/kamoso.git" } ]
        }
    ]
}
