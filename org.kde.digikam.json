{
    "id": "org.kde.digikam",
    "branch": "master",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.14",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "digikam",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--share=ipc", "--socket=cups", "--socket=x11", "--socket=wayland", "--filesystem=host" ],
    
    "modules": [
        "boost.json",
        {
            "name": "opencv",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DWITH_OPENCL=ON", "-DWITH_OPENGL=ON", "-DWITH_TBB=ON", "-DWITH_XINE=ON"],
            "sources": [ { "type": "git", "url": "https://github.com/Itseez/opencv.git", "branch": "3.4.5" } ]
        },
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://github.com/Exiv2/exiv2.git", "branch": "0.27" } ]
        },
        {
            "name": "digikam",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DENABLE_TESTING=OFF"],
            "builddir": true,
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/digikam.git" } ]
        }
    ]
}
