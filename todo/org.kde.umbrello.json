{
    "id": "org.kde.umbrello",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "umbrello",
    "tags": ["nightly"],
    "desktop-file-name-prefix": "(Nightly) ",
    "finish-args": ["--share=ipc", "--socket=x11", "--socket=wayland" ],

    "modules": [
        "qtwebkit.json",
        {
            "config-opts": ["-DENABLE_TESTING=OFF", "-DCMAKE_INSTALL_LIBDIR=lib"],
            "name": "kdelibs4support",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/kdelibs4support.git", "branch": "v5.43.0" } ]
        },
        {
            "name": "umbrello",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DBUILD_KF5=ON", "-DENABLE_TESTING=OFF", "-DCMAKE_INSTALL_LIBDIR=lib", "-DQt5WebKitWidgets_DIR=/app/lib/cmake/Qt5WebKitWidgets/"],
            "sources": [
                { "type": "git", "url": "git://anongit.kde.org/umbrello.git" }
            ]
        }
    ]
}
