{
    "id": "org.kde.labplot2",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "labplot2",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--share=network", "--share=ipc", "--socket=x11", "--socket=wayland", "--filesystem=host", "--filesystem=/tmp" ],

    "modules": [
        "eigen.json",
        "poppler.json",
        "analitza.json",
        {
            "name": "gsl",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.gnu.org/gnu/gsl/gsl-2.6.tar.gz",
                    "sha256": "b782339fc7a38fe17689cb39966c4d821236c28018b6593ddb6fd59ee40786a8"
                }
            ]
        },
        {
            "name": "hdf5",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://support.hdfgroup.org/ftp/HDF5/releases/hdf5-1.10/hdf5-1.10.7/src/hdf5-1.10.7.tar.gz",
                    "sha256": "7a1a0a54371275ce2dfc5cd093775bb025c365846512961e7e5ceaecb437ef15"
                }
            ]
        },
        {
            "name": "netcdf",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Unidata/netcdf-c.git",
                    "tag": "v4.8.1"
                }
            ]
        },
        {
            "name": "cfitsio",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://heasarc.gsfc.nasa.gov/FTP/software/fitsio/c/cfitsio-3.49.tar.gz",
                    "sha256": "5b65a20d5c53494ec8f638267fca4a629836b7ac8dd0ef0266834eab270ed4b3"
                }
            ]
        },
        {
            "name": "libcerf",
	    "buildsystem": "cmake-ninja",
	    "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://jugit.fz-juelich.de/mlz/libcerf/-/archive/v1.14/libcerf-v1.14.tar.gz",
                    "sha256": "065346b3360943c9961517f8c49ae13fe956835f6fc3b53e9d307e41feec3a34"
                }
            ]
        },
        {
            "name": "qtmqtt",
	    "buildsystem": "qmake",
	    "builddir": true,
	    "make-install-args": ["INSTALL_ROOT=/app/qtmqtt"],
	    "sources": [ { "type": "git", "url": "https://github.com/qt/qtmqtt.git", "tag": "v5.15.2" } ]
	},
        {
            "name": "kuserfeedback",
	    "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kuserfeedback/kuserfeedback-1.0.0.tar.xz",
                    "sha256": "5a2f53ebb4b99a280757ca32bd9b686a7764a726e7e4d8bafee33acbb44b9db7"
                }
            ]
        },
        {
            "name": "readstat",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/WizardMac/ReadStat.git",
                    "tag": "v1.1.6"
                }
            ]
        },
        {
            "name": "cantor",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/kde/cantor.git" } ]
        },
        {
            "name": "labplot",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DQt5Mqtt_DIR=/app/qtmqtt/usr/lib/x86_64-linux-gnu/cmake/Qt5Mqtt" ],
            "sources": [ { "type": "git", "url": "https://invent.kde.org/kde/labplot.git", "branch": "master" } ]
        }
    ]
}
