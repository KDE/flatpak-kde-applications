{
    "id": "org.kde.lokalize",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "lokalize",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--share=ipc", "--socket=x11", "--socket=wayland", "--device=dri" ],
    "separate-locales": false,

    "modules": [
        {
            "name": "kross",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DENABLE_TESTING=OFF" ],
            "sources": [ { "type": "git", "url": "https://invent.kde.org/kde/kross.git", "branch": "v5.85.0" } ]
        },
        {
            "name": "hunspell",
            "sources": [
                { "type": "git", "url": "https://github.com/hunspell/hunspell.git" },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "AUTOMAKE=\"automake --foreign\" autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "lokalize",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/kde/lokalize.git" } ]
        }
    ]
}
