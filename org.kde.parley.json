{
    "id": "org.kde.parley",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "parley",
    "tags": ["nightly"],
    "desktop-file-name-prefix": "(Nightly) ",
    "finish-args": ["--share=network", "--share=ipc", "--socket=x11", "--socket=wayland" ],

    "modules": [
        {
            "name": "kjs",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DENABLE_TESTING=OFF", "-DCMAKE_INSTALL_LIBDIR=lib"],
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/kjs.git", "branch": "v5.47.0" } ]
        },
        {
            "name": "khtml",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DENABLE_TESTING=OFF", "-DCMAKE_INSTALL_LIBDIR=lib"],
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/khtml.git", "branch": "v5.47.0" } ]
        },
        {
            "name": "kross",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DENABLE_TESTING=OFF", "-DCMAKE_INSTALL_LIBDIR=lib"],
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/kross.git", "branch": "v5.47.0" } ]
        },
        {
            "name": "libkeduvocdocument",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/libkeduvocdocument.git" } ]
        },
        {
            "name": "parley",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/parley.git" } ]
        }
    ]
}
