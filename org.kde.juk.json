{
    "id": "org.kde.juk",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "juk",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--share=ipc", "--socket=x11", "--socket=wayland", "--filesystem=host" ],

    "modules": [
        {
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DENABLE_TESTING=OFF",
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/taglib/taglib.git",
                    "tag": "v1.12",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    },
                    "commit": "c8b39449c383158b4d669ee97374543f9d0733bf"
                }
            ]
        },
        {
            "name": "juk",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DENABLE_TESTING=OFF" ],
            "sources": [
                { "type": "git", "url": "https://invent.kde.org/kde/juk.git" }
            ]
        }
    ]
}
