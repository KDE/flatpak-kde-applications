{
    "id": "org.kde.trojita",
    "rename-icon": "trojita",
    "base": "io.qt.qtwebkit.BaseApp",
    "base-version": "5.12",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "trojita",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "trojita",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "git://anongit.kde.org/trojita",
                    "branch": "master"
                }
            ]
        }
    ]
}
