{
    "id": "org.kde.atcore",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "atcore-gui",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--share=ipc", "--socket=x11", "--socket=wayland", "--device=all" ],
    "modules": [
        {
            "name": "atcore",
            "config-opts": ["-DBUILD_GUI=ON"],
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/mkspecs",
                "/include",
                "/*/cmake"
            ],
            "sources": [ 
                { "type": "git", "url": "git://anongit.kde.org/atcore.git" } 
            ]
        }
    ]
}
