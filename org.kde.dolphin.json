{
    "id": "org.kde.dolphin",
    "branch": "kf6",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.5",
    "sdk": "org.kde.Sdk",
    "command": "dolphin",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--share=ipc", "--socket=x11", "--socket=wayland", "--filesystem=host" ],

    "modules": [
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/LMDB/lmdb.git",
                    "tag": "LMDB_0.9.29",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^LMDB_([\\d.]+)$"
                    },
                    "commit": "8ad7be2510414b9506ec9f9e24f24d04d9b04a1a"
                }
            ],
            "no-autogen": true,
            "make-install-args": ["prefix=/app"],
            "subdir" : "libraries/liblmdb"
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo",
            "buildsystem": "cmake-ninja",
	    "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/frameworks/baloo.git",
                    "tag": "master",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF", "-DBUILD_WITH_QT6=ON" , "-DLMDB_DIR=/app"],
            "name": "baloo-widgets",
            "buildsystem": "cmake-ninja",
	    "builddir": true,
            "sources": [ { "type": "git", "url": "https://invent.kde.org/libraries/baloo-widgets.git" } ]
        },
        {
            "name": "kmoretools",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kmoretools.git",
                    "tag": "master"
                }
            ]
        },
        {
	    "config-opts": ["-DFLATPAK=ON", "-DBUILD_WITH_QT6=ON"],
            "name": "dolphin",
            "buildsystem": "cmake-ninja",
	    "builddir": true,
            "sources": [ { "type": "git", "url": "https://invent.kde.org/system/dolphin.git", "tag": "kf6" } ]
        },
        {
            "config-opts": ["-DBUILD_WITH_QT6=ON"],
            "name": "dolphin-plugins",
            "buildsystem": "cmake-ninja",
	    "builddir": true,
            "sources": [ { "type": "git", "url": "https://invent.kde.org/sdk/dolphin-plugins.git" } ]
        }
    ]
}
