{
    "id": "org.kde.klines",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "klines",
    "rename-icon": "klines",
    "tags": ["nightly"],
    "desktop-file-name-prefix": "(Nightly) ",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host",
        "--env=QT_QPA_PLATFORM=flatpak"
    ],
    "modules": [
        "libkdegames.json",
        {
            "name": "klines",
            "buildsystem": "cmake-ninja",
            "sources": [
                { "type": "git", "url": "git://anongit.kde.org/klines.git" }
            ]
        }
    ]
}
