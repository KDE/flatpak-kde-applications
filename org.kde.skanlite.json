{
    "id": "org.kde.skanlite",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "skanlite",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--share=ipc", "--socket=x11", "--socket=wayland", "--filesystem=home", "--device=all" ],
    "separate-locales": false,

    "modules": [
        {
            "name": "sane",
            "buildsystem": "autotools",
            "sources": [ { "type": "git", "url": "https://gitlab.com/sane-project/backends", "tag": "RELEASE_1_0_27"} ]
        },
        {
            "name": "libksane",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/kde/libksane.git" } ]
        },
        {
            "name": "skanlite",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://invent.kde.org/kde/skanlite.git" } ]
        }
    ]
}
