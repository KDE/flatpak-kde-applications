{
	"command": "subtitlecomposer",
	"finish-args": [
		"--share=ipc",
		"--device=dri",
		"--socket=x11",
		"--socket=wayland",
		"--socket=pulseaudio"
	],
	"id": "org.kde.subtitlecomposer",
	"runtime": "org.kde.Platform",
	"runtime-version": "5.15",
	"sdk": "org.kde.Sdk",
	"tags": ["nightly"],
	"desktop-file-name-suffix": " (Nightly)",
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/share/pkgconfig",
		"/share/aclocal",
		"/man",
		"/share/man"
	],
	"modules": [
		{
			"buildsystem": "autotools",
			"name": "SphinxBase",
			"config-opts": [
				"--without-python"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/cmusphinx/sphinxbase.git"
				}
			]
		},
		{
			"buildsystem": "autotools",
			"name": "PocketSphinx",
			"config-opts": [
				"--without-python"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/cmusphinx/pocketsphinx.git"
				}
			]
		},
		{
			"buildsystem": "cmake-ninja",
			"name": "kross",
			"sources": [
				{
					"branch": "v5.85.0",
					"type": "git",
					"url": "https://invent.kde.org/frameworks/kross.git"
				}
			]
		},
		{
			"buildsystem": "cmake-ninja",
			"name": "subtitlecomposer",
			"config-opts": [
				"-DBUILD_TESTING=OFF"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://invent.kde.org/multimedia/subtitlecomposer.git"
				}
			]
		}
	]
}
