{
    "id": "org.kde.falkon",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "rename-icon": "falkon",
    "command": "falkon",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=host",
        "--system-talk-name=org.freedesktop.GeoClue2"
    ],

    "modules": [
        {
            "buildsystem": "cmake",
            "name": "falkon",
            "sources": [
                {
                    "type": "git",
                    "url": "git://anongit.kde.org/falkon.git"
                }
            ]
        }
    ]
}
