{
    "id": "org.kde.umbrello",
    "branch": "master",
    "base": "io.qt.qtwebkit.BaseApp",
    "base-version": "5.11",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "umbrello5",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--share=ipc", "--socket=x11", "--socket=wayland" ],

    "modules": [
        {
            "config-opts": [ "-DENABLE_TESTING=OFF" ],
            "name": "kdelibs4support",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/kdelibs4support.git", "branch": "v5.54.0" } ]
        },
        {
            "name": "umbrello",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DBUILD_KF5=ON", "-DENABLE_TESTING=OFF", "-DQt5WebKit_DIR=/app/lib/cmake/Qt5WebKit/", "-DQt5WebKitWidgets_DIR=/app/lib/cmake/Qt5WebKitWidgets/"],
            "sources": [
                { "type": "git", "url": "git://anongit.kde.org/umbrello.git" }
            ]
        }
    ]
}
