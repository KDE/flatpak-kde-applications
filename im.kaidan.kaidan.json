{
    "id": "im.kaidan.kaidan",
    "rename-desktop-file": "kaidan.desktop",
    "rename-icon": "kaidan",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "kaidan",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--device=all",
        "--talk-name=org.freedesktop.Notifications",
        "--env=QT_QUICK_CONTROLS_STYLE=org.kde.desktop"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "qxmpp",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qxmpp-project/qxmpp"
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/lib/pkgconfig" ]
        },
        {
            "name": "zxing",
            "config-opts": [ "-DBUILD_SHARED_LIBS=ON" ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nu-book/zxing-cpp"
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/mkspecs", "/etc/xdg/*categories" ]
        },
        {
            "name": "gst-plugins-bad",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dflite=disabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gstreamer.freedesktop.org/src/gst-plugins-bad/gst-plugins-bad-1.16.2.tar.xz",
                    "sha256": "f1cb7aa2389569a5343661aae473f0a940a90b872001824bc47fa8072a041e74"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/*.la",
                "/lib/gstreamer-1.0/*.la",
                "/lib/gstreamer-1.0/include",
                "/lib/pkgconfig",
                "/share/gtk-doc"
            ]
        },
        {
            "name": "kaidan",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DI18N=1", "-DQUICK_COMPILER=0"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://anongit.kde.org/kaidan",
                    "branch": "master"
                }
            ]
        }
    ]
}
