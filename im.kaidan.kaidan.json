{
    "id": "im.kaidan.kaidan",
    "rename-icon": "kaidan",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "kaidan",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--device=all",
        "--talk-name=org.freedesktop.Notifications",
        "--env=QT_QUICK_CONTROLS_STYLE=org.kde.desktop",
        "--env=LD_LIBRARY_PATH=/usr/lib/"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "kquickimageeditor",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kquickimageeditor.git"
                }
            ]
        },
        {
            "name": "libomemo-c",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DBUILD_SHARED_LIBS=ON"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/dino/libomemo-c.git",
                    "branch": "omemo"
                }
            ]
        },
        {
            "name": "qxmpp",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DBUILD_TESTS=OFF", "-DBUILD_EXAMPLES=OFF", "-DBUILD_OMEMO=ON"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qxmpp-project/qxmpp.git"
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/lib/pkgconfig" ]
        },
        {
            "name": "zxing",
            "config-opts": [
                "-DBUILD_DEPENDENCIES=LOCAL",
                "-DBUILD_SHARED_LIBS=ON",
                "-DBUILD_UNIT_TESTS=OFF",
                "-DBUILD_BLACKBOX_TESTS=OFF",
                "-DBUILD_EXAMPLES=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/zxing-cpp/zxing-cpp.git",
                    "tag": "v1.4.0"
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/mkspecs", "/etc/xdg/*categories" ]
        },
        {
            "name": "kaidan",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DQUICK_COMPILER=0"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/network/kaidan.git",
                    "branch": "master"
                }
            ]
        }
    ]
}
