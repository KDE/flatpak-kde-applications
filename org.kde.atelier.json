{
    "id": "org.kde.atelier",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "atelier",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--share=ipc", "--socket=x11", "--share=network", "--socket=wayland", "--filesystem=host", "--device=all" ],
    "modules": [
        {
            "name": "qwt",
            "buildsystem": "qmake",
            "cleanup": [
                "/doc",
                "/include",
                "/features",
                "/share",
                "/plugins"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/qwt/qwt/6.1.4/qwt-6.1.4.tar.bz2",
                    "sha256":"1529215329e51fc562e0009505a838f427919a18b362afff441f035b2d9b5bd9"
                },
                {
                    "type": "patch",
                    "path": "qwtPatch.patch"
                }
            ]
        },
        {
            "name": "atcore",
            "config-opts": ["-DBUILD_GUI=ON"],
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/mkspecs",
                "/include",
                "/*/cmake"
            ],
            "sources": [ 
                { "type": "git", "url": "git://anongit.kde.org/atcore.git" } 
            ]
        },
        {
            "name": "atelier",
            "buildsystem": "cmake-ninja",
            "sources": [
                { "type": "git", "url": "git://anongit.kde.org/atelier.git" }
            ]
        }
    ]
}
