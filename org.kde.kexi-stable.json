{
    "id": "org.kde.kexi-stable",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "kexi-3.2",
    "tags": ["nightly-stable"],
    "rename-desktop-file": "org.kde.kexi-3.2.desktop",
    "desktop-file-name-suffix": " (Nightly, Stable)",
    "finish-args": ["--share=ipc", "--socket=x11", "--socket=wayland" ],

    "modules": [
        {
            "name": "breeze-icons",
            "config-opts": [ "-DSKIP_INSTALL_ICONS=ON" ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://invent.kde.org/frameworks/breeze-icons.git", "tag": "v5.105.0" } ]
        },
        {
            "name": "kdb",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/libraries/kdb.git", "branch": "3.2" } ]
        },
        {
            "name": "kproperty",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/libraries/kproperty.git", "branch": "3.2" } ]
        },
        {
            "name": "kreport",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/libraries/kreport.git", "branch": "3.2" } ]
        },
        {
            "name": "kexi",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/office/kexi.git", "branch": "3.2" } ]
        }
    ]
}
