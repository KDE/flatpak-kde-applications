{
    "id": "org.kde.okular",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": ,
    "sdk": "org.kde.Sdk",
    "command": "okular",
    "rename-icon": "okular",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
       "--share=ipc",
       "--share=network",
       "--socket=cups",
       "--socket=pulseaudio",
       "--socket=x11",
       "--socket=wayland",
       "--env=QT_QPA_PLATFORM=xcb",
       "--device=dri",
       "--filesystem=host"
    ],
    "modules": [
        "okular_dependencies.json",
        {
            "name": "okular",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://invent.kde.org/graphics/okular.git", "branch": "master" } ]
        }
    ]
}
