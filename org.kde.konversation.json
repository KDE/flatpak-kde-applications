{
    "id": "org.kde.konversation",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "konversation",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
