{
    "id": "org.kde.vakzination",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "vakzination",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],

    "modules": [
        "poppler.json",
        {
            "name": "zxing",
            "config-opts": [
                "-DBUILD_DEPENDENCIES=LOCAL",
                "-DBUILD_SHARED_LIBS=ON",
                "-DBUILD_UNIT_TESTS=OFF",
                "-DBUILD_BLACKBOX_TESTS=OFF",
                "-DBUILD_EXAMPLES=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://github.com/nu-book/zxing-cpp" } ],
            "cleanup": [ "/include", "/lib/cmake", "/mkspecs", "/etc/xdg/*categories" ]
        },
        {
            "name": "khealthcertificate",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/pim/khealthcertificate.git"} ]
        },
        {
            "name": "kpkpass",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/pim/kpkpass.git" } ]
        },
        {
            "name": "kmime",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/pim/kmime.git" } ]
        },
        {
            "name": "kpimitinerary",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/pim/kitinerary.git" } ]
        },
        {
            "name": "vakzination",
            "buildsystem": "cmake-ninja",
            "sources": [
                { "type": "git", "url": "https://invent.kde.org/plasma-mobile/vakzination.git" }
            ]
        }
    ]
}
