{
    "id": "org.kde.index",
    "rename-icon": "index",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "index",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host",
        "--env=XDG_DATA_DIRS=/usr/share:/app/share/"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "mauikit",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/kde/mauikit.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "mauikit-filebrowsing",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/maui/mauikit-filebrowsing.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "kio-extras",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/kde/kio-extras.git",
                    "branch": "release/21.04"
                }
            ]
        },
        {
            "name": "kdecoration",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "sha256": "3ab5b5cc8030552215845690fb7107764e59ead9ce9b5a50f6a810b5166c0069",
                    "url": "https://download.kde.org/stable/plasma/5.23.4/kdecoration-5.23.4.tar.xz",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8761,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma/$version/kdecoration-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "applet-window-buttons",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/psifidotos/applet-window-buttons",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "index-fm",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/kde/index-fm.git",
                    "branch": "master"
                }
            ]
        }
    ]
}

