{
    "id": "org.kde.skanpage",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "skanpage",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": ["--share=ipc", "--socket=x11", "--socket=wayland", "--device=all" ],
    "separate-locales": false,

    "modules": [
        {
            "name": "sane",
            "buildsystem": "autotools",
            "sources": [ { "type": "git", "url": "https://gitlab.com/sane-project/backends", "tag": "1.0.32"} ]
        },
        {
            "name": "libksane",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://anongit.kde.org/libksane.git" } ]
        },
        {
            "name": "skanpage",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://anongit.kde.org/skanpage.git" } ]
        }
    ]
}
