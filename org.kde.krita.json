{
    "id": "org.kde.krita",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "krita",
    "rename-icon": "calligrakrita",
