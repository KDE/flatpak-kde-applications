        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.exiv2.org/builds/exiv2-0.27.0a-Source.tar.gz",
                    "sha256": "a4adfa7aaf295b0383adead476f8e0493b9d6c6c7570d5884d2ebf8a2871902f"
                }
            ]
        },
        {
            "name": "quazip",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [ "-DBUILD_WITH_QT4=OFF" ],
            "sources": [ { "type": "git", "url": "https://github.com/stachenov/quazip.git" } ]
        },
        {
            "name": "krita",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "git://anongit.kde.org/krita.git" } ]
        }
    ]
}
